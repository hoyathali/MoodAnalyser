<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.havap.moodanalyser.login">
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eidtback"
        android:hint="Email"
        android:layout_marginLeft="60dp"
        android:inputType="textEmailAddress"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/email"
        android:textColor="@color/black"
        android:id="@+id/useremail"
        android:padding="3dp"/>
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eidtback"
        android:hint="Password"
        android:id="@+id/userpassword"
        android:drawableLeft="@drawable/pass"
        android:inputType="textPassword"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/black"
        android:padding="3dp"/>
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eidtback"
        android:hint="Confirm Password"
        android:id="@+id/userconfirmpassword"
        android:drawableLeft="@drawable/pass"
        android:inputType="textPassword"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/black"
        android:padding="3dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_gravity="center"
        android:textColor="@color/teal"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/create"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/singbut"
        android:background="@drawable/butback"
        android:text="Swipe to Login "/>
</LinearLayout>
